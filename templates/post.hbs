<div class="card post-card">
    <div class="user-dets">
        <div class="post-card-pp">
            <a href="/AlphaDate/profile/{{ userid }}"><img src="/AlphaDate/img/pp.jpg" alt=""></a>
        </div>

        <div class="post-card-textuals">
            <a href="/AlphaDate/profile/{{ userid }}">
                <div class="fullname">{{ fullname }}</div>
                <div class="time">{{ time }}</div>
            </a>
        </div>
    </div>

    <div class="post-content">
        <div class="text">{{#safe text }}{{/safe}}</div>
    </div>

    <div class="post-actions">
        <div class="post-action heart {{#if hearted}}clicked{{/if}}" onclick="heart($(this))" data-postid="{{ postid }}"><i class="fas fa-heart"></i> <span class="num">{{ num_hearts }}</span></div>
        <div class="post-action comment"><i class="fa fa-comment-alt"></i> <span class="num">{{ num_comments }}</span></div>
    </div>

    <div class="post-comments-section">
        <div class="new-comment-wrap">
            <div class="user-image">
                <img src="/AlphaDate/img/pp.jpg">
            </div>
        
            <form class="new-comment-input">
                <div contenteditable="plaintext-only" placeholder="כתוב תגובה..." class="comment-text-input"></div>
                
                <input type="file" class="comment-additional-image">
                <div class="trigger-comment-additional-image">
                    <i class="fa fa-camera" aria-hidden="true"></i>
                </div>
            </form>
        </div>
    </div>
</div>